<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Intenso_Review::css/intenso-review.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Thank you for posting a review!</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Intenso\Review\Block\Map\Success" name="review_map_success" template="Intenso_Review::map/success.phtml" />
        </referenceContainer>
    </body>
</page>
