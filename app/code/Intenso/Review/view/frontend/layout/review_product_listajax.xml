<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root">
        <block class="Intenso\Review\Block\Product\View\ListView" name="product.info.product_additional_data" as="product_additional_data" template="Intenso_Review::product/list/view.phtml" />
        <block class="Intenso\Review\Block\Html\Pager" name="product_review_list.toolbar">
            <arguments>
                <argument name="show_per_page" xsi:type="boolean">true</argument>
                <argument name="show_amounts" xsi:type="boolean">false</argument>
            </arguments>
        </block>
    </container>
</layout>
